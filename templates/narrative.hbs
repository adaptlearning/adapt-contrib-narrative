{{! Maintainers - Brian Quinn}}
<div class="narrative-inner component-inner">
    {{#if title}}
    <div class="narrative-title component-title">
        <h4 class="narrative-title-inner">
            {{{title}}}
        </h4>
    </div>
    {{/if}}
    {{#if body}}
    <div class="narrative-title component-body">
        <p class="narrative-title-inner">
            {{{body}}}
        </p>
    </div>
    {{/if}}
    <div class="narrative-widget component-widget">
        
        <div class="narrative-strapline">
            <div class="header">
                <div class="inner clearfix">
                    {{#each items}}
                    <div class="title">
                        <h5 class="inner">
                           {{{strapline}}} 
                        </h5>
                    </div>
                    {{/each}}
                </div>
            </div>
            <a href="#" class="narrative-popup-open" tabindex="-1">
                <div class="icon icon-plus"></div>
            </a>
        </div>
        
        <div class="narrative-slide-container">
   
            <div class="narrative-popup">
                <div class="inner">
                    <div class="narrative-toolbar">
                        <div class="inner clearfix">
                            {{#each items}}
                            <div class="title">
                                <h5 class="inner">
                                    {{{title}}}
                                </h5>
                            </div>
                            {{/each}}
                            <a href="#" class="narrative-popup-close">
                                <div class="icon icon-cross"></div>
                            </a>
                        </div>
                    </div>
                    {{#each items}}
                    <div class="narrative-content">
                        <div class="inner">
                            {{{body}}}  
                        </div> 
                    </div>
                    {{/each}}
                </div>
            </div>
  
            {{#unless mobile}}
            <a href="#" class="controls narrative-control-left">
                <div class="icon icon-controls-left"></div>
            </a>
            <a href="#" class="controls narrative-control-right">
                <div class="icon icon-controls-right"></div>
            </a>
            {{/unless}}
            <div class="narrative-slider clearfix">
                {{#each items}}
                <div class="narrative-graphic">
                    <img src="{{graphic.src}}" alt="{{graphic.alt}}" title="{{{graphic.title}}}"/>
                </div>
                {{/each}}
            </div>
            <div class="narrative-indicators">
                {{#each items}}
                <div class="button progress" tabindex="-1"></div>
                {{/each}}
            </div>
        </div>
        {{#unless mobile}}
        <div class="narrative-content">
            <div class="inner">
                {{#each items}}
                <div class="item">
                    <div class="title">
                        <h5 class="inner">
                           {{{title}}} 
                        </h5>
                    </div>
                    <div class="body">
                        <div class="inner">
                            {{{body}}}
                        </div> 
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{/unless}}
    </div>    
</div>